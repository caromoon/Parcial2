	nop
	
        movlw d'100'
        movwf o
	
    
 oloop: movlw d'36'
        movwf p
	nop
	nop
	nop
	nop
	
   
ploop: movlw d'90'
       movwf q
       nop
       nop
       
    
 qloop:decfsz q,f
       goto qloop
       decfsz p,f
       goto ploop
       nop
       nop
       nop
       
       decfsz o,f
       goto oloop
       
       return
      
       
tiempo5: ;tiempo cuando no esta presionado el PB
    
nop
nop
nop
nop
nop
nop
nop
nop
nop
nop
nop
nop
nop
nop
nop
nop
nop
nop
nop
nop
	   
 movlw d'252'
 movwf i

 iloop: movlw d'104'
        movwf j
	
	
   
jloop: movlw d'4'
       movwf k
       nop
       nop
       nop
       
kloop:decfsz k,f
       goto kloop
       decfsz j,f
       goto jloop
       nop
       nop
       nop
       nop
       decfsz i,f
       goto iloop
       
    
       return
  
END
